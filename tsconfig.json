{
    "compilerOptions": {
      "rootDir": "src",
      "module": "CommonJS",
      "target": "ES5",
      "lib": [
         "dom",
         "DOM.Iterable",
         "ESNext",
         "ES2015"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "downlevelIteration": true,
      "declaration": true,
      "esModuleInterop": true,
      "outDir": "./dist/",
      "typeRoots": [
         "./node_modules/@types",
         "./types"
      ]
    },
    "include": [
       "src/**/*.ts"
    ]
}